{
  "$comment": "ctxlint（Context Spec検証CLI）のHaskell開発環境",
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "timezone": "Asia/Tokyo",
      "username": "dev-user"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "anthropic.claude-code",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "usernamehw.errorlens",
        "wayou.vscode-todo-highlight",
        "biomejs.biome",
        "oven.bun-vscode",
        "bierner.markdown-mermaid",
        "haskell.haskell"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "files.autoSave": "onFocusChange",
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "git.autofetch": true,
        "git.confirmSync": false,
        "[haskell]": {
          "editor.formatOnSave": true
        }
      }
    }
  },
  "containerEnv": {
    "CLAUDE_SETTINGS_PATH": "${containerWorkspaceFolder}/.claude/settings.json",
    "TZ": "Asia/Tokyo"
  },
  "remoteEnv": {
    "PATH": "/home/dev-user/.ghcup/bin:/home/dev-user/.cabal/bin:/home/dev-user/.local/bin:/home/dev-user/.bun/bin:${containerEnv:PATH}"
  },
  "initializeCommand": "bash .devcontainer/initialize.sh",
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/dev-user/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/dev-user/.ssh,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.npmrc,target=/home/dev-user/.npmrc,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.claude/rules,target=/home/dev-user/.claude/rules,type=bind",
    "source=${localEnv:HOME}/.claude/ide,target=/home/dev-user/.claude/ide,type=bind",
    "source=${localEnv:HOME}/.claude/plans,target=/home/dev-user/.claude/plans,type=bind",
    "source=${localEnv:HOME}/.claude/todos,target=/home/dev-user/.claude/todos,type=bind",
    "source=${localEnv:HOME}/.codex,target=/home/dev-user/.codex,type=bind"
  ],
  "postCreateCommand": "bash .devcontainer/post-create.sh && curl --proto \"=https\" --tlsv1.2 -sSf https://get-ghcup.haskell.org | BOOTSTRAP_HASKELL_NONINTERACTIVE=1 BOOTSTRAP_HASKELL_GHC_VERSION=9.8.1 BOOTSTRAP_HASKELL_CABAL_VERSION=3.12.1.0 BOOTSTRAP_HASKELL_INSTALL_STACK=1 BOOTSTRAP_HASKELL_INSTALL_HLS=1 sh",
  "remoteUser": "dev-user",
  "name": "ctxlint Development"
}
